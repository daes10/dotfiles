# History
HISTFILE=~/.zsh_history        # File to save command history
HISTSIZE=10000                # Number of commands to remember in current session
SAVEHIST=10000                # Number of commands to save to history file
setopt INC_APPEND_HISTORY     # Immediately append commands to history file
setopt SHARE_HISTORY          # Share history across multiple terminal sessions

# Globbing & Completion
setopt AUTO_CD                # Automatically cd into a directory if you just type its name
setopt CORRECT                # Spell correction for commands
setopt EXTENDED_GLOB          # Enable extended pattern matching features

# Prompt & Syntax Highlighting
autoload -U colors && colors  # Load color definitions
setopt PROMPT_SUBST           # Allow variable and command substitution in prompt
zmodload zsh/complist         # Load completion list module for colored completions

# Aliases
alias ll='ls -alF'            # Long listing with details and indicators
alias la='ls -A'              # List all except . and ..
alias grep='grep --color=auto' # Color-highlight grep matches

# Path
export PATH="$HOME/bin:$PATH"  # Add ~/bin to the PATH environment variable

# Starship prompt
eval "$(starship init zsh)"    # Initialize Starship prompt
